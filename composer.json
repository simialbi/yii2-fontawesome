{
    "name": "simialbi/yii2-fontawesome",
    "description": "Asset Bundle for Yii2 with Font Awesome",
    "keywords": [
        "yii",
        "font",
        "awesome",
        "asset",
        "bundle"
    ],
    "type": "yii2-extension",
    "license": "MIT",
    "minimum-stability": "stable",
    "support": {
        "issues": "https://github.com/rmrevin/yii2-fontawesome/issues",
        "source": "https://github.com/rmrevin/yii2-fontawesome"
    },
    "authors": [
        {
            "name": "Revin Roman",
            "email": "roman@rmrevin.com",
            "homepage": "https://rmrevin.com/"
        },
        {
            "name": "Simon Karlen",
            "email": "simi.albi@outlook.com"
        }
    ],
    "require": {
        "php": ">=8.2",
        "bower-asset/fontawesome": "^6.0.0",
        "yiisoft/yii2": "^2.0.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.5.20",
        "yiisoft/yii2-coding-standards": "~2.0"
    },
    "suggest": {
        "fortawesome/font-awesome": "Font awesome free",
        "fortawesome/font-awesome-pro": "Font awesome pro"
    },
    "replace": {
        "rmrevin/yii2-fontawesome": "3.* | dev-master",
        "raiffeisen/yii2-fontawesome": "4.* | dev-master"
    },
    "autoload": {
        "psr-4": {
            "rmrevin\\yii\\fontawesome\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "yiiunit\\extensions\\fontawesome\\": "tests"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "3.0.x-dev"
        }
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://asset-packagist.org"
        }
    ],
    "config": {
        "allow-plugins": {
            "yiisoft/yii2-composer": true
        }
    }
}
